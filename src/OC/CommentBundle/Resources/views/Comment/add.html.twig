{# Comments Form #}
<div class="card my-4">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    <h5 class="card-header">Ecrivez un commentaire :</h5>
    <div class="card-body">
        <div class="form-group">
            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Message'}}) }}
        </div>
        {{ form_errors(form.content) }}
        <button type="submit" class="btn btn-primary btn-comment" style="margin:10px">Envoyer</button>
    </div>
    {{ form_end(form)}}
</div>

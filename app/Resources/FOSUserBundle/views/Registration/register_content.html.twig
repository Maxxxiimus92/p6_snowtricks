{% trans_default_domain 'FOSUserBundle' %}

<h1 style="margin-top:80px;margin-bottom:20px">Cr√©er un compte</h1>

<div class="row">
    <div class="col-lg-10 col-md-10">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal', 'novalidate': 'novalidate'}}) }}
            <div class="form-group row">
                {{ form_label(form.email, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}})}}
                </div>
                <div class="col-md-9">
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.username, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}})}}
                </div>
                <div class="col-md-9">
                    {{ form_errors(form.username) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}})}}
                </div>
                <div class="col-md-9">
                    {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}})}}
                </div>
                <div class="col-md-9">
                    {{ form_errors(form.plainPassword.second) }}
                </div>
            </div>
            <div class="form-group row"  style="margin-bottom:270px">
                <div class="col-md-12" style="text-align:right">
                    <input class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans }}" />
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>


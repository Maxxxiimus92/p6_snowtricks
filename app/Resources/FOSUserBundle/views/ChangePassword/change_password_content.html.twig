{% trans_default_domain 'FOSUserBundle' %}

<h1 style="margin-top:50px;margin-bottom:40px">Modification du mot de passe</h1>

<div class="row">
	<div class="col-lg-10 col-md-10">
		{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}
			<div class="form-group row">
				{{ form_label(form.current_password, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
				<div class="col-md-9">
					{{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="col-md-9">
					{{ form_errors(form.current_password) }}
				</div>
			</div>
   			<div class="form-group row">
				{{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
				<div class="col-md-9">
					{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="col-md-9">
					{{ form_errors(form.plainPassword.first) }}
				</div>
			</div>
			<div class="form-group row">
				{{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
				<div class="col-md-9">
					{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="col-md-9">
					{{ form_errors(form.plainPassword.second) }}
				</div>
			</div>
		    <div class="form-group row" style="margin-bottom:340px">
				<div class="col-md-12" style="text-align:right">
		        	<input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-primary" />
				</div>
		    </div>
		{{ form_end(form) }}
    </div>
</div>



{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-lg-10 col-md-10">
        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit form-horizontal' } }) }}
            <div class="form-group row">
                <div class="col-md-12">
                    <h1 style="margin-top:50px;margin-bottom:20px">Profil</h1>
                    <p>Votre photo de profil provient du site <a href="https://fr.gravatar.com/" target="_blank">Gravatar</a>.</p>
                    <img src="{{ app.user.gravUrl }}" alt="{{ app.user.username }}" class="img-responsive" style="border:2px solid lightblue;float:right">
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.username, null, {'label_attr': {'class': 'col-md-3 control-label'}})}}
                <div class="col-md-9">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-9">
                    {{ form_errors(form.username)}}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.email, null, {'label_attr': {'class': 'col-md-3 control-label'}})}}
                <div class="col-md-9">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-9">
                    {{ form_errors(form.email)}}
                </div>
            </div>
            <div class="form-group row">
                {{ form_label(form.current_password, null, {'label_attr': {'class': 'col-md-3 control-label'}})}}
                <div class="col-md-9">
                    {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-9">
                    {{ form_errors(form.current_password)}}
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <a href="{{ path('fos_user_change_password') }}" class="btn btn-warning">{{ 'change_password.submit'|trans }}</a>
                </div>
            </div>
            <div class="form-group row" style="margin-bottom:150px">
                <div class="col-md-12" style="text-align:right">
                    <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-primary" />
                </div>
            </div>
        {{ form_end(form) }}
    </div>
</div>

